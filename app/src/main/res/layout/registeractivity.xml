<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightgray"
        tools:context=".Registeractivity">

    <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_margin="15dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/textView_register_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/black"
                    android:text="Please Enter Your Detail to Register"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

                <TextView
                    android:id="@+id/fullname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/baseline_person_24"
                    android:drawablePadding="3dp"
                   android:layout_below="@id/textView_register_head"
                    android:text="Full Name*"
                    android:textSize="16sp"
                    android:padding="6dp"
                    android:textColor="#555555"
                    android:layout_marginTop="50dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/registerfullname"
            android:inputType="textPersonName"
            android:textColor="@color/purple"
            android:hint="Enter Your Full Name"
            android:background="@drawable/border"
            android:textColorHint="@color/gray"
            android:layout_below="@id/fullname"
            android:textSize="16sp"
            android:padding="6dp"/>



        <TextView
            android:id="@+id/email"
            android:drawableLeft="@drawable/baseline_email_24"
            android:drawablePadding="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/registerfullname"
            android:text="Email*"
            android:textSize="16sp"
            android:padding="6dp"
            android:textColor="#555555"
            android:layout_marginTop="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/registeremail"
            android:inputType="textEmailAddress"
            android:hint="Enter Your Email Id"
            android:textColor="@color/purple"
            android:textColorHint="@color/gray"
            android:background="@drawable/border"
            android:layout_below="@id/email"
            android:textSize="16sp"
            android:padding="6dp"/>

        <TextView

            android:id="@+id/dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/registeremail"
            android:drawableLeft="@drawable/baseline_calendar_month_24"
            android:drawablePadding="3dp"
            android:text="Data of Birth(dd/mm/yy)*"
            android:textSize="16sp"
            android:padding="6dp"
            android:textColor="#555555"
            android:layout_marginTop="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/registerdob"
            android:inputType="text"
            android:textColor="@color/purple"
            android:hint="Select Your data of birth(dd/mm/yy)"
            android:focusable="false"
            android:background="@drawable/border"
            android:textColorHint="@color/gray"
            android:layout_below="@id/dob"
            android:textSize="16sp"
            android:padding="6dp"/>

        <TextView
            android:id="@+id/textview_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/registerdob"
            android:drawableLeft="@drawable/baseline_person_outline_24"
            android:drawablePadding="3dp"
            android:text="Gender*"
            android:textSize="16sp"
            android:padding="6dp"
            android:textColor="#555555"
            android:layout_marginTop="10dp"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/textview_gender"
            android:id="@+id/readi_grp_register_gender">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/brnfemale"
                android:layout_below="@id/readi_grp_register_gender"
                android:text="Female"
                android:textColorHint="@color/gray"
                android:textSize="16sp"
                android:textColor="#555555"/>

        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnmale"
                android:layout_below="@id/readi_grp_register_gender"
                android:text="Male"
                android:layout_marginLeft="20dp"
                android:textSize="16sp"
                android:textColor="#555555"/>
        </RadioGroup>


        <TextView
            android:id="@+id/mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/readi_grp_register_gender"
            android:text="Mobile*"
            android:drawableLeft="@drawable/baseline_phone_24"
            android:drawablePadding="3dp"
            android:textSize="16sp"
            android:padding="6dp"
            android:textColor="#555555"
            android:layout_marginTop="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mobileregister"
            android:inputType="numberDecimal"
            android:textColor="@color/purple"
            android:hint="Enter Your Mobile no (Without +91)"
            android:background="@drawable/border"
            android:layout_below="@id/mobile"
            android:textColorHint="@color/gray"
            android:textSize="16sp"
            android:padding="6dp"/>

        <TextView
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/baseline_lock_24"
            android:drawablePadding="3dp"
            android:layout_below="@id/mobileregister"
            android:text="Password*"
            android:textSize="16sp"
            android:padding="6dp"
            android:textColor="#555555"
            android:layout_marginTop="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/passregister"
            android:textColor="@color/purple"
            android:inputType="textPersonName"
            android:hint="Enter Your Password"
            android:background="@drawable/border"
            android:layout_below="@id/password"
            android:textSize="16sp"
            android:textColorHint="@color/gray"
            android:padding="6dp"/>

        <TextView
            android:id="@+id/confpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/passregister"
            android:drawableLeft="@drawable/baseline_password_24"
            android:drawablePadding="3dp"
            android:text="Confirm Password*"
            android:textSize="16sp"
            android:padding="6dp"
            android:textColor="#555555"
            android:layout_marginTop="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/confirmpass"
            android:inputType="textPassword"
            android:hint="Confirm Your Password"
            android:textColorHint="@color/gray"
            android:textColor="@color/purple"
            android:background="@drawable/border"
            android:layout_below="@id/confpassword"
            android:textSize="16sp"
            android:padding="6dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="50dp"
            android:layout_below="@id/confirmpass"
            android:text="REGISTER"
            android:layout_marginRight="70dp"
            android:id="@+id/btnregform"/>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressbar"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:elevation="10dp"
            android:visibility="gone"/>



    </RelativeLayout>


</ScrollView>


